<table>
 <tbody>
<%= form_with model: @user, url: user_path, local:true, method: :put  do |f| %>
    <tr>
     <th><%= f.label :メールアドレス %></th>
     <td><%= f.email_field :email %></td>
    </tr> 
   
    <tr>
      <th><%= f.label :パスワード %></th><br>
      <td><%= f.password_field :password %></td>
    </tr>
    
    <tr>
     <th><%= f.label :パスワード確認用 %></th>
     <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </tbody>
</table>
   <% if current_user %>  
    <ul>
    <%= f.submit '保存' %>
      <%= link_to "キャンセル", edit_user_path(current_user.id) %>
    </ul>
   <% end %> 
    </tr>
<% end %>

<%= render 'layouts/footer' %>