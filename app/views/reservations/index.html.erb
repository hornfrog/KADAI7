<h1>予約済み一覧</h1>

<table>
  <thead>
    <tr>
    <th>画像</th>
    <th>施設名</th>
    <th>紹介文</th>
    <th>合計金額</th>
    <th>チェックイン</th>
    <th>チェックアウト</th>
    <th>予約確定日時</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.reservations.each do |reservation| %>
      <tr>
     <% if reservation.room.room_image.present? %>
        <td><%= attachment_image_tag(reservation.room, :room_image, :fill, 100, 100 ) %></td>
     <% else %>
        <td><%= image_tag("default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png", size: "100x100") %></td>
     <% end %>
        <td><%= reservation.room_name %></td>
        <td><%= reservation.room_description %></td>
        <td><%= number_to_currency(reservation.total_amount, unit: '¥', format: '%u%n', precision: 0) %></td>
        <td><%= reservation.check_in_date %></td>
        <td><%= reservation.check_out_date %></td>
        <td><%= reservation.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'layouts/footer' %>